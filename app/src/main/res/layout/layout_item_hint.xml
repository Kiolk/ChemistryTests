<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/hint_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/BLOCK_PADDING">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/hint_fragment_text_view"
                android:layout_width="match_parent"
                android:background="@drawable/area_square_shape"
                android:padding="@dimen/BLOCK_PADDING"
                android:fontFamily="@font/forum"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/attachmnent_linear_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>