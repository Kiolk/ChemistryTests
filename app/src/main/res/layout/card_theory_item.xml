<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/side_margin_card_item"
    android:layout_marginTop="@dimen/vertical_margin_card_item"
    android:layout_marginRight="@dimen/side_margin_card_item"
    android:layout_marginBottom="@dimen/vertical_margin_card_item"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_card_item">

        <TextView
            android:id="@+id/theory_item_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/forum"
            android:textColor="@color/THEORY_TITLE_COLOR"
            android:textSize="@dimen/BIG_TEXT_SIZE"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/eye_icon_image_view"
            tools:text="Chemical bonds" />

        <ImageView
            android:id="@+id/eye_icon_image_view"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/small_text_separation"
            android:layout_marginRight="@dimen/small_text_separation"
            android:src="@drawable/ic_eye"
            app:layout_constraintBottom_toBottomOf="@+id/read_duration_text_view"
            app:layout_constraintLeft_toRightOf="@+id/theory_item_title_text_view"
            app:layout_constraintRight_toLeftOf="@+id/read_duration_text_view"
            app:layout_constraintTop_toTopOf="@+id/read_duration_text_view" />

        <TextView
            android:id="@+id/read_duration_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_text_separation"
            android:layout_marginRight="@dimen/small_text_separation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/eye_icon_image_view"
            app:layout_constraintRight_toRightOf="@+id/read_duration_title_text_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="4" />

        <TextView
            android:id="@+id/read_duration_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MIN_READ"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/read_duration_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>