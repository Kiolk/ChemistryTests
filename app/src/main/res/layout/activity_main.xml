<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawer_layout"
    tools:context="com.github.kiolk.chemistrytests.ui.activities.MainActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/main_conataine_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expanded="true"
            android:orientation="vertical">

            <include layout="@layout/tool_bar_main" />
        </android.support.design.widget.AppBarLayout>
        <FrameLayout
            android:id="@+id/main_frame_layout"
            android:layout_below="@+id/main_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:visibility="gone"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/courses_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_below="@id/main_app_bar_layout"
            android:id="@+id/start_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/SECOND_TEXT_COLOR"
            android:visibility="gone">
            <Button
                android:id="@+id/open_courses_button"
                android:layout_margin="@dimen/BLOCK_PADDING"
                android:text="@string/COURSES"
                android:layout_centerInParent="true"
                android:textSize="32sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_styling"
                android:layout_above="@+id/testing_activity_button"/>
            <Button
                android:layout_margin="@dimen/BLOCK_PADDING"
                android:text="@string/CHOSE_TEST"
                android:textSize="32sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/testing_activity_button"
                android:id="@+id/chose_ready_test_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_styling"/>
            <Button
                android:layout_margin="@dimen/BLOCK_PADDING"
                android:text="Start test"
                android:textSize="32sp"
                android:layout_centerInParent="true"
                android:id="@+id/testing_activity_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_styling"/>
            <Button
                android:layout_margin="@dimen/BLOCK_PADDING"
                android:text="@string/CUSTOM_TEST"
                android:textSize="32sp"
                android:layout_centerInParent="true"
                android:id="@+id/custom_test_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chose_ready_test_button"
                android:background="@drawable/button_styling"/>
            <Button
                android:layout_margin="@dimen/BLOCK_PADDING"
                android:text="@string/COMPLETED_TESTS"
                android:textSize="32sp"
                android:layout_centerInParent="true"
                android:id="@+id/completed_test_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/custom_test_button"
                android:background="@drawable/button_styling"/>
        </RelativeLayout>
        </android.support.design.widget.CoordinatorLayout>
        <WebView
            android:id="@+id/main_web_view"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_relative_layout"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:itemIconTint="@color/GRAY_TEXT_COLOR"
        app:itemTextColor="@color/GRAY_TEXT_COLOR"
        app:menu="@menu/menu_drawer"
        app:headerLayout="@layout/drawer_header">
            <ListView
                android:paddingTop="@dimen/HEADER_HEIGHT"
                android:id="@+id/navigation_menu_list_view"
                android:layout_width="match_parent"
                android:divider="@color/TRANSPARENT_COLOR"
                android:layout_height="match_parent"
                android:visibility="gone">

            </ListView>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
