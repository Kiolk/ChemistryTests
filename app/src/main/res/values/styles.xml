<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_layer_list</item>
    </style>

    <style name="QuestionBlockStyle" parent="BaseQuestionStyle">
        <item name="android:fontFamily">@font/forum</item>
        <item name="android:padding">@dimen/BLOCK_PADDING</item>
        <item name="android:visibility">invisible</item>
        <item name="background">@drawable/area_square_shape</item>
        <item name="android:layout_marginTop">@dimen/HALF_BLOCK_PADDING</item>
        <item name="android:layout_marginBottom">@dimen/HALF_BLOCK_PADDING</item>
    </style>

    <style name="Right" parent="QuestionBlockStyle">
        <item name="android:layout_marginRight">@dimen/HALF_BLOCK_PADDING</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Left" parent="QuestionBlockStyle">
        <item name="android:layout_marginLeft">@dimen/HALF_BLOCK_PADDING</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="InputSquareStyle">
        <item name="android:layout_width">@dimen/INPUT_BLOCK_SIZE</item>
        <item name="android:layout_height">@dimen/INPUT_BLOCK_SIZE</item>
        <item name="android:background">@drawable/input_area_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/INPUT_TEXT_SIZE</item>
        <item name="android:layout_marginRight">@dimen/INPUT_PADDING</item>
    </style>

    <style name="BottomIconStyle">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">@dimen/SMALL_ICON_SIZE</item>
        <item name="android:layout_height">@dimen/SMALL_ICON_SIZE</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BigTitleStyle">
        <item name="android:textSize">@dimen/BIG_TEXT_SIZE</item>
        <item name="android:padding">@dimen/BLOCK_PADDING</item>
        <item name="android:fontFamily">@font/bicubik</item>
    </style>

    <style name="ResultInformationStyle">
        <item name="android:padding">@dimen/BLOCK_PADDING</item>
        <item name="android:textSize">@dimen/NORMAL_TEXT_SIZE</item>
    </style>

    <style name="ResultInformationStyle.Right" parent="ResultInformationStyle">
        <item name="android:gravity">right</item>
    </style>

    <style name="ResultInformationStyle.Left" parent="ResultInformationStyle">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="DescriptionBlockStyle">
        <item name="android:padding">@dimen/BLOCK_PADDING</item>
        <item name="android:textSize">@dimen/NORMAL_TEXT_SIZE</item>
    </style>

    <style name="IconTitleStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/SMALL_TEXT_SIZE</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DeviderLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/DIVIDER_HEIGHT</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/DARK_GREEN_BACKGROUND</item>
        <item name="android:layout_marginRight">@dimen/BLOCK_PADDING</item>
        <item name="android:layout_marginLeft">@dimen/BLOCK_PADDING</item>
    </style>

    <style name="CustomBlockStyle">
        <item name="android:paddingRight">@dimen/BLOCK_PADDING</item>
        <item name="android:paddingLeft">@dimen/BLOCK_PADDING</item>
        <item name="android:layout_height">@dimen/CUSTOM_ITEM_HEIGHT</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="GeneralProgressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="Left.Rounded">
        <item name="android:background">@drawable/area_left_round_shape</item>
    </style>

    <style name="Right.Rounded">
        <item name="android:background">@drawable/area_right_round_shape</item>
    </style>

    <style name="QuestionStyle" parent="BaseQuestionStyle">
        <item name="android:layout_margin">@dimen/BLOCK_PADDING</item>
        <item name="android:fontFamily">@font/forum</item>
    </style>

    <style name="BaseQuestionStyle">
        <item name="android:fontFamily">@font/forum</item>
        <item name="android:textSize">@dimen/QUESTION_TEXT_SIZE</item>
    </style>

    <dimen name="SMALL_ICON_SIZE">30dp</dimen>
    <dimen name="LITTLE_ICON_SIZE">20dp</dimen>
    <dimen name="NORMAL_TEXT_SIZE">16sp</dimen>
    <dimen name="HALF_BLOCK_PADDING">2dp</dimen>
    <dimen name="OPTION_LABEL_WIDTH">30dp</dimen>
</resources>
