<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionBlockStyle">
        <item name="android:layout_margin">@dimen/BLOCK_PADDING</item>
        <item name="android:background">@drawable/area_square_shape</item>
        <item name="android:padding">@dimen/BLOCK_PADDING</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
